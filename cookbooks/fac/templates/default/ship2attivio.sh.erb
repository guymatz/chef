#!/usr/bin/env bash

ATTIVIO_MASTER="<%= @attivio_master[:fqdn] %>"

SRC_FILE="<%= @updatestream %>/streams_list_attivio_ready.xml"
DST_FILE="<%= @attivio_dropbox %>/streams_list_attivio_ready.xml"
SCP_USER=attivio

if [ -f $SRC_FILE ] ; then
    scp -i /home/$SCP_USER/.ssh/deploy $SRC_FILE $SCP_USER@$ATTIVIO_MASTER:$DST_FILE
    if [ $? -ne 0 ] ; then
        echo "An error occured shipping streams_list_attivio_ready.xml to $ATTIVIO_MASTER"
        exit $?
    fi
    mv $SRC_FILE $SRC_FILE.$(date +%Y%m%d).shipped
else
    echo "Error: No xml file available to ship"
    exit 1
fi
